cat > bin/bdnet << 'EOF'
#!/data/data/com.termux/files/usr/bin/bash

# BD Network Diagnostics Pro
# Professional Network Analysis Tool

echo ""
echo "ğŸŒ BD Network Diagnostics Pro"
echo "============================="

# Internet Connectivity
echo "ğŸ“¡ INTERNET CONNECTIVITY"
echo "========================"
if ping -c 2 -W 1 8.8.8.8 >/dev/null 2>&1; then
    echo "Status:   âœ… Connected"
    
    # Get public IP
    public_ip=$(curl -s --connect-timeout 5 https://api.ipify.org)
    if [ -n "$public_ip" ]; then
        echo "Public IP: $public_ip"
    fi
else
    echo "Status:   âŒ Disconnected"
fi

# DNS Resolution
echo ""
echo "ğŸ” DNS RESOLUTION"
echo "================="
if nslookup google.com >/dev/null 2>&1; then
    echo "DNS:      âœ… Working"
else
    echo "DNS:      âŒ Failed"
fi

# Local Network
echo ""
echo "ğŸ  LOCAL NETWORK"
echo "================"
local_ip=$(ip route get 1 2>/dev/null | awk '{print $7}' | head -1)
if [ -n "$local_ip" ] && [ "$local_ip" != "dev" ]; then
    echo "Local IP: $local_ip"
else
    echo "Local IP: Not available"
fi

# Network Interfaces
echo ""
echo "ğŸ”Œ NETWORK INTERFACES"
echo "====================="
if command -v ifconfig >/dev/null 2>&1; then
    ifconfig | grep -E "^[a-z]" | cut -d: -f1 | while read -r interface; do
        echo "Interface: $interface"
    done
else
    echo "Network interfaces: ifconfig not available"
fi

# Port Checking
echo ""
echo "ğŸ”’ COMMON PORTS"
echo "==============="
ports=("80:HTTP" "443:HTTPS" "22:SSH" "53:DNS")
for port_info in "${ports[@]}"; do
    port="${port_info%:*}"
    service="${port_info#*:}"
    
    if nc -z 127.0.0.1 "$port" 2>/dev/null; then
        echo "Port $port ($service): âœ… Open"
    else
        echo "Port $port ($service): âŒ Closed"
    fi
done

echo ""
echo "âœ… Network diagnostics completed"
echo "ğŸ’¡ BD Termux Tools Pro - By Masum Vai"
EOF

chmod +x bin/bdnet